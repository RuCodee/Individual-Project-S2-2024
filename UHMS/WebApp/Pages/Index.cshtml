@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!--2nd part-->
<header class="header">
    <div class="logo-container">
        <img src="~/images/RuMED.png" alt="RuMED Logo" class="logo">
    </div>
    <nav class="main-nav">
        <ul>
            <li><a href="/Doctors">Doctors</a></li>
            <li><a href="#about">About Us</a></li>
            <li><a href="#faq">FAQ</a></li>
            <li class="login-button"><a asp-page="/Login">Login</a></li>
        </ul>
    </nav>
</header>

<!--3rd part-->
<section class="hero">
    <div class="hero-content">
        <div class="text-container">
            <h1>Your Personal Gateway</h1>
            <h1>to Health and Wellness</h1>
        </div>
        <a href="/Registration" class="btn btn-primary">Registration</a>
    </div>
</section>

<!--4th part-->
<section class="services">
    <div class="service-column" id="emergency">
        <div class="service-header">
            <h2>Emergency</h2>
        </div>
        <div class="service-body">
            <p>I got burnt</p>
            <p>I got a cut</p>
            <p>I fell down</p>
            <p>I think I'm having an allergic reaction</p>
            <p>Have a high feveraction</p>
            <p>I'm experiencing chest pain</p>
            <a href="#" class="service-button">Call an ambulance</a>
        </div>
    </div>
    <div class="service-column" id="medical-history">
        <div class="service-header">
            <h2>Medical History</h2>
        </div>
        <div class="service-body">
            <p>Explore your health story with just a click. Our Medical History section invites you to delve into your past medical records, treatments, and consultations, providing a comprehensive overview of your health journey.</p>
            <a href="#" class="service-button">Check my Report</a>
        </div>
    </div>
    <div class="service-column" id="appointment">
        <div class="service-header">
            <h2>Appointment</h2>
        </div>
        <div class="service-body">
            <p>Seamlessly connect with healthcare professionals through our Get an Appointment feature. Whether you need a routine check-up or a consultation for specific health concerns, easily schedule appointments with qualified doctors.</p>
            <a href="#" class="service-button">Get appointment</a>
        </div>
    </div>
</section>

<!--5nd part-->
<section class="info-section">
    <div class="info-overlay">
        <h2>We're determined for your better life.</h2>
        <p>You can get the care you need 24/7 - be it online or in person.</p>
        <p>You will be treated by caring specialist doctors.</p>
    </div>
</section>