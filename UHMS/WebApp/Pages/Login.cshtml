@page
@model WebApp.Pages.LoginModel
@{
    Layout = "_Layout";
}

<header class="header">
    <div class="logo-container">
        <img src="~/images/RuMED.png" alt="RuMED Logo" class="logo">
    </div>
    <nav class="main-nav">
        <ul>
            <li><a href="/Doctors">Doctors</a></li>
            <li><a href="#about">About Us</a></li>
            <li><a href="#faq">FAQ</a></li>
            <li class="login-button"><a asp-page="/Registration">Register</a></li>
        </ul>
    </nav>
</header>

<div class="login-bar">
    Log In
</div>

<div class="login-container">
    <div class="login-info">
        <h2>Get Access To Everything RuMED Offers</h2>
        <ul>
            <li>View Your Medical Records</li>
            <li>Give Access To Your Favorite Doctor</li>
            <li>Get An Appointment</li>
        </ul>
    </div>
    <div class="login-form">
        <form method="post">
            <h2>Log In</h2>
            <label for="username">User Name (SSN/DoctorId/JobId)</label>
            <input type="text" id="username" name="username" required>
            <label for="password">Password</label>
            <input type="password" id="password" name="password" required>
            <button type="submit">Log In</button>
        </form>
        
        @if (TempData["ErrorMessage"] != null)
        {
            <div style="color:red; margin-top:10px;">
                @TempData["ErrorMessage"]
            </div>
        }
    </div>
</div>

<!--5nd part-->
<section class="info-section">
    <div class="info-overlay">
        <h2>We're determined for your better life.</h2>
        <p>You can get the care you need 24/7 - be it online or in person.</p>
        <p>You will be treated by caring specialist doctors.</p>
    </div>
</section>